{
  "name": "a-ddd-from-scratch",
  "version": "1.0.0",
  "description": "API Node.js + Express + TypeScript suivant les principes Clean DDD",
  "main": "dist/server.js",
  "packageManager": "pnpm@10.23.0",
  "node": {
    "version": ">=20.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "ddd",
    "clean-architecture",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "upsylon development",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/helmet": "^4.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "mongoose": "^8.0.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.3",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pino-http": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.0.2",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
